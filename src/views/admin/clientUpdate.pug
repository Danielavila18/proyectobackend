extends ../layout/admin
block list
    include ../includes/admin/navbarAdmin
    .container
        .row
            .col-md-8.my-4.mx-auto
                .container 
                    .card.card-body
                        if(msg)
                            div(class=`alert-${msg.typeAlert}`).alert.text-uppercase.text-center #{msg.msg}
                        if(!client)
                            a(href="/api/client").btn.btn-success.text-uppercase Volver
                        else
                            form(action=`/api/client/update/${client.id}` method='POST')
                                    legend.text-center.card-title.text-uppercase Actualizar Cliente 
                                    .form-group
                                    label.col-md-3.control-label(for='nombre') Nombre
                                    .col-md-12
                                        input#nombre.form-control(name='nombre' value=client.nombre required='true' type='text' placeholder='Escribe el nombre')
                                    .form-group
                                    label.col-md-3.control-label(for='cedula') Cedula
                                    .col-md-12
                                        input#marca.form-control(name='cedula'  value=client.cedula required='true' type='number' placeholder='Ingresa la cedula')
                                    .form-group
                                    label.col-md-3.control-label(for='telefono') Telefono
                                    .col-md-12
                                        input#precio.form-control(name='telefono'  value=client.telefono  required='true' type='tel' placeholder='Ingresa el telefono')
                                    .form-group
                                    label.col-md-3.control-label(for='email') Correo
                                    .col-md-12
                                        input#imagen.form-control(name='email'  value=client.email  required='true' type='email' placeholder='Ingresa el email')
                                    .form-group
                                    .col-md-12.text-center
                                        button.btn.btn-outline-success.btn-block.font-weight-bold(type='submit') Actualizar